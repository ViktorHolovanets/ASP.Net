@model List<User>
<div class="users">
    @foreach (var user in Model)
    {
        <div class="contur">
            <div class="info-user">
                @await Html.PartialAsync("ViewUser", @user)
            </div>
            <div class="view-user">
                <img src="~/Images/icons8-avatar-67.png"/>
                
                    @using (Html.BeginForm("EditUser", "Home", FormMethod.Get))
                    {
                        @Html.Hidden("Id", @user.Id)
                        <p>
                            <input type="submit" value="Edit"/>
                        </p>
                    }
            </div>
        </div>
    }
</div>