<div class="background-opacity"></div>
<div class="create">
    <h2>Create user</h2>
    @using (Html.BeginForm("CreateUser", "Home", FormMethod.Post))
    {
        @Html.Label("name", "Name:")
        <br />
        @Html.TextBox("name","", new{placeholder="Enter name", pattern="[A-Za-z]{3,}"})
        <br />
        @Html.Label("surname", "Surname")
        <br />
        @Html.TextBox("surname","", new{placeholder="Enter surname",pattern="[A-Za-z]{3,}"})
        <br />
        @Html.Label("age", "Age")
        <br />
        @Html.TextBox("age","",new { type="number", placeholder="Enter age", min="1", max="75",pattern="[1-9]{1,}"})
        <br />
        <input type="submit" value="Create" />
    }

</div>
