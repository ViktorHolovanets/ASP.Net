@model IEnumerable<Product>
<div class="content">
    @foreach (var p in Model)
    {
        <div class="product">
            <img src="@p.Image" />
            <p class="nameProduct">@p.Name</p>
            <p class="priceProduct">@p.Price ₴</p>
            <form asp-controller="Home" asp-action="Details" method="get">
                <input type="hidden" name="id" value="@p.Id" />
                <input type="submit" value="Details" class="addBasket"/>
                @*<a class="addBasket hl"  asp-route-id="@p.Id">Edit</a>*@
            </form>
        </div>
    }
</div>