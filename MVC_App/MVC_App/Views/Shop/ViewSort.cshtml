@model IEnumerable<ViewProduct>
<div class="content">
    @foreach (var p in Model)
    {
        <div class="product">
            <div class="showCategory">
                <img src="@p.Image" />
            </div>
            <p class="nameProduct">@p.Name</p>
            <p class="priceProduct">@p.Price ₴</p>
            <form asp-controller="Shop" asp-action="Details" method="get">
                <input type="hidden" name="id" value="@p.Id"/>
                <input type="submit" value="Details" class="addBasket"/>
            </form>
        </div>
    }
</div>
