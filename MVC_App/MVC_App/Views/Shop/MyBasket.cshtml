@model IEnumerable<Product>
<div class="content">
    @if (@Model!=null)
    {
        @foreach (var p in Model)
        {
            <div class="product">
                <div class="showCategory">
                    <img src="@p.Image" />
                </div>
                <p class="nameProduct">@p.Name</p>
                <p class="priceProduct">@p.Price ₴</p>
                <form method="post">
                    <input type="hidden" name="id" value="@p.Id"/>
                    <input type="image" src="~/Images/buy.png" class="btnNavigation">
                    <input type="image" src="~/Images/return-purchase.png" class="btnNavigation">
                </form>
            </div>
        }
    }
    else
    {
        <div id="modal-window" style="display: block">
            <div id="details">
                <a href="#" id="close" onclick="closeModalWindow(event)">❌</a>
                <form method="get" asp-action="Task2">
                    <h2>Пройдіть реєстрацію</h2>
                    <input type="submit" value="Ok" class="btn"/>
                </form>
            </div>
        </div>
    }
</div>