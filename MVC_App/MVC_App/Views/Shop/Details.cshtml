@{
}
@model Product
<div class="result-details">
    @if (ViewBag.IsUser)
    {
        <form method="post">
            <input type="hidden" value="@Model.Id" name="idProduct" />
            <input type="image" src="~/Images/buy.png" id="addProduct" class="btnNavigation">
        </form>
    }
    <h2>@Model.Name</h2>
    <p class="price">Price: @Model.Price ₴</p>
    <div class="class-flex">
        <img src="@Model.Image" class="img"/>
        <p>@Model.Details</p>
    </div>
</div>
