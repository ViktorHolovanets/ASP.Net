<div id="call-window" class="position-fixed col-12 col-sm-12 col-md-9 col-lg-4 col-xl-3 col-xxl-3 mx-md-auto">
    <form id="form-call" method="post" onsubmit="return false">
        <label>
            Name:<br />
            <input type="text" name="Name" pattern="[A-Za-z]{3,}" />
        </label>
        <label>
            Tel:<br />
            <input type="tel" name="tel" pattern="^[380][0-9]{7}$" placeholder="380*********"/>
        </label>
        <label>
            Comments:<br />
            <textarea name="comments"></textarea>
        </label>
        <input type="submit" value="Send" id="send-form" class="btn btn-success"/>
        <input type="button" value="Close" id="close-form" class="btn btn-danger"/>
    </form>
</div>
