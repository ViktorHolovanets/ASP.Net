@model List<DayofWeekTraining>
<div>
    <p>Monday<hr/></p>
    @foreach (var item in Model.Where(d=>d.dayofWeek==DayofWeek.Monday).OrderBy(d=>d.Time))
    {
        <p>@item.Time</p>
    }
</div>
